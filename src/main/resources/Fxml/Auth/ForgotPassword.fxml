<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox fx:id="forgotPasswordVBox" prefWidth="350.0" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.schoolproject.javafxmoviesapp.Controllers.Auth.ForgotPasswordController">
   <children>
      <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="Forgot Password">
         <styleClass>
            <String fx:value="fs-2xl" />
            <String fx:value="font-bold" />
            <String fx:value="text-white" />
         </styleClass>
      </Label>
      <TextField fx:id="emailTextField" promptText="Input email of you" styleClass="fs-lg" />
      <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onMouseClicked="#handleForgotPassword" text="Submit">
         <styleClass>
            <String fx:value="btn-submit" />
            <String fx:value="fs-lg" />
            <String fx:value="font-bold" />
         </styleClass>
      </Button>
      <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onMouseClicked="#backToLogin" styleClass="bg-transparent">
         <graphic>
               <FontIcon iconColor="WHITE" iconLiteral="far-arrow-alt-circle-left" iconSize="32" />
         </graphic>
         <tooltip>
            <Tooltip text="Back to Login" />
         </tooltip>
      </Button>
   </children>
   <stylesheets>
      <URL value="@../../Styles/base.css" />
      <URL value="@../../Styles/auth.css" />
   </stylesheets>
   <padding>
      <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
   </padding>
</VBox>
