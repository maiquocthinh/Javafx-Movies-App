<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>


<VBox fx:id="OTPVBox" prefWidth="350.0" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.schoolproject.javafxmoviesapp.Controllers.Auth.OTPController">
   <children>
      <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="OTP Verification">
         <styleClass>
            <String fx:value="fs-2xl" />
            <String fx:value="font-bold" />
            <String fx:value="text-white" />
         </styleClass>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Label>
      <Label alignment="CENTER" maxWidth="1.7976931348623157E308" styleClass="fs-sm" text="Enter the OTP code from your email" textAlignment="CENTER" textFill="WHITE" wrapText="true" />
      <TextField fx:id="OTPCodeTextField" promptText="OTP Code">
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor>
         <styleClass>
            <String fx:value="square" />
            <String fx:value="fs-lg" />
         </styleClass>
      </TextField>
      <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onMouseClicked="#handleVerifyOTP" text="Submit" textFill="#1b1b1b">
         <styleClass>
            <String fx:value="btn-submit" />
            <String fx:value="fs-lg" />
         </styleClass>
      </Button>
   </children>
   <padding>
      <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
   </padding>
   <stylesheets>
      <URL value="@../../Styles/base.css" />
      <URL value="@../../Styles/auth.css" />
   </stylesheets>
</VBox>
